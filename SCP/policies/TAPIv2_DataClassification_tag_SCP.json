{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TAPIv2DenyResourceCreationWithoutDataClassificationTag",
      "Effect": "Deny",
      "Action": [
        "appsync:CreateGraphqlApi",
        "athena:CreateWorkGroup",
        "backup:CreateBackupVault",
        "comprehend:CreateDocumentClassifier",
        "comprehend:CreateEntityRecognizer",
        "comprehend:CreateFlywheel",
        "docdb-elastic:CreateCluster",
        "dynamodb:CreateTable",
        "ec2:CreateSnapshot",
        "ec2:CreateVpnGateway",
        "elasticache:CreateCacheCluster",
        "elasticfilesystem:CreateFileSystem",
        "es:CreateDomain",
        "firehose:CreateDeliveryStream",
        "fsx:CreateFileCache",
        "fsx:CreateFileSystem",
        "glacier:CreateVault",
        "glue:CreateCrawler",
        "glue:CreateJob",
        "kinesis:CreateStream",
        "kinesisvideo:CreateStream",
        "kms:CreateKey",
        "mq:CreateBroker",
        "mq:CreateConfiguration",
        "rds:CreateDBCluster",
        "rds:CreateDBClusterSnapshot",
        "rds:CreateDBInstance",
        "rds:CreateDBSnapshot",
        "redshift:CreateCluster",
        "rekognition:CreateStreamProcessor",
        "s3:CreateBucket",
        "sagemaker:CreateModel",
        "sagemaker:CreateNotebookInstance",
        "sqs:CreateQueue",
        "sns:CreateTopic"
      ],
      "Resource": [
        "arn:aws:appsync:*:*:apis/*",
        "arn:aws:athena:*:*:workgroup/*",
        "arn:aws:backup:*:*:backup-vault/*",
        "arn:aws:comprehend:*:*:document-classifier/*",
        "arn:aws:comprehend:*:*:entity-recognizer/*",
        "arn:aws:comprehend:*:*:flywheel/*",
        "arn:aws:docdb-elastic:*:*:cluster/*",
        "arn:aws:dynamodb:*:*:table/*",
        "arn:aws:ec2:*:*:snapshot/*f",
        "arn:aws:ec2:*:*:vpn-gateway/*",
        "arn:aws:elasticache:*:*:cluster/*",
        "arn:aws:elasticfilesystem:*:*:file-system/*",
        "arn:aws:es:*:*:domain/*",
        "arn:aws:firehose:*:*:deliverystream/*",
        "arn:aws:fsx:*:*:file-cache/*",
        "arn:aws:fsx:*:*:file-system/*",
        "arn:aws:glacier:*:*:vaults/*",
        "arn:aws:glue:*:*:crawler/*",
        "arn:aws:glue:*:*:job/*",
        "arn:aws:kinesis:*:*:stream/*",
        "arn:aws:kinesisvideo:*:*:stream/*",
        "arn:aws:kms:*:*:key/*",
        "arn:aws:mq:*:*:broker/*",
        "arn:aws:mq:*:*:configuration/*",
        "arn:aws:rds:*:*:cluster-snapshot/*",
        "arn:aws:rds:*:*:cluster/*",
        "arn:aws:rds:*:*:db/*",
        "arn:aws:rds:*:*:snapshot/*",
        "arn:aws:redshift:*:*:cluster/*",
        "arn:aws:rekognition:*:*:streamprocessor/*",
        "arn:aws:s3:::*3",
        "arn:aws:sagemaker:*:*:model/*",
        "arn:aws:sagemaker:*:*:notebook-instance/*",
        "arn:aws:sns:*:*:*",
        "arn:aws:sqs:*:*:*"
      ],
      "Condition": {
        "Null": {
          "aws:RequestTag/DataClassification": "true"
        }
      }
    }
  ]
}